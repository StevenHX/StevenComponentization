<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:ignore="ResourceName">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/login_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_230"
        android:layout_marginTop="235dp"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_bg_iv">
        <com.hx.steven.component.ClearEditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:hint="@string/login_user_name"
            android:textSize="14sp"
            android:drawableLeft="@drawable/pps_user_name"
            android:drawablePadding="@dimen/dp_15"
            android:textColorHint="@color/gray_8f">
        </com.hx.steven.component.ClearEditText>
        <com.hx.steven.component.ClearEditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_100"
            android:hint="@string/login_pwd"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:drawablePadding="@dimen/dp_15"
            android:drawableLeft="@drawable/pps_pwd"
            android:textColorHint="@color/gray_8f">
        </com.hx.steven.component.ClearEditText>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@string/login_login_btn"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/btn_select_bg">
        </androidx.appcompat.widget.AppCompatButton>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black_metrial"
        android:text="Steven1.0"
        android:drawableStart="@drawable/login_line_left"
        android:drawableEnd="@drawable/login_line_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_40">
    </androidx.appcompat.widget.AppCompatTextView>
</androidx.constraintlayout.widget.ConstraintLayout>