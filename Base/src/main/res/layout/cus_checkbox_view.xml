<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cus_cb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        tools:text="是否自动生成栈板"
        android:textColor="@color/black_metrial"
        android:textColorHint="@color/gray_8f"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <androidx.appcompat.widget.AppCompatCheckBox
       android:id="@+id/cus_cb_checkbox"
       android:layout_width="@dimen/dp_30"
       android:layout_height="@dimen/dp_30"
       android:layout_marginStart="@dimen/dp_15"
       app:layout_constraintTop_toTopOf="@id/cus_cb_title"
       app:layout_constraintStart_toEndOf="@id/cus_cb_title"
       app:layout_constraintBottom_toBottomOf="@id/cus_cb_title">
   </androidx.appcompat.widget.AppCompatCheckBox>


</androidx.constraintlayout.widget.ConstraintLayout>