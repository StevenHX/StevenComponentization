<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/cus_select_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    tools:text="入库类型"
    android:textColor="@color/black_metrial"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/cus_select_value"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="@dimen/dp_15"
    android:background="@null"
    android:drawableEnd="@drawable/downarrow"
    android:drawableBottom="@drawable/cus_input_line"
    android:gravity="center_vertical"
    tools:hint="请选择"
    android:textColor="@color/gray"
    android:textColorHint="@color/gray_8f"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cus_select_title" />

</androidx.constraintlayout.widget.ConstraintLayout>